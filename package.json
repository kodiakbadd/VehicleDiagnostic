{
  "name": "vwconnapp",
  "version": "1.0.0",
  "description": "Professional ECU Diagnostic Tool for VW Tiguan and Nissan Titan XD 2017",
  "author": "kodiakbadd",
  "private": true,
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:win": "electron-builder --win"
  },
  "dependencies": {
    "react": "19.1.0",
    "serialport": "^13.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native-community/cli": "20.0.0",
    "@react-native-community/cli-platform-android": "20.0.0",
    "@react-native-community/cli-platform-ios": "20.0.0",
    "@react-native/babel-preset": "0.81.4",
    "@react-native/eslint-config": "0.81.4",
    "@react-native/metro-config": "0.81.4",
    "@react-native/typescript-config": "0.81.4",
    "@types/jest": "^29.5.13",
    "@types/react": "^19.1.0",
    "@types/react-test-renderer": "^19.1.0",
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "prettier": "2.8.8",
    "react-test-renderer": "19.1.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20"
  },
  "build": {
    "appId": "com.kodiakbadd.vwconnapp",
    "productName": "VWConnApp",
    "copyright": "Copyright Â© 2025 kodiakbadd",
    "directories": {
      "output": "dist"
    },
    "files": [
      "*.js",
      "*.html",
      "!node_modules",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "VWConnApp",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true
    },
    "fileAssociations": [],
    "protocols": []
  }
}

